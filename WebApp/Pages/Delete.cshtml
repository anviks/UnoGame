@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this game?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameState!.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameState!.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameState!.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameState!.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameState!.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameState!.UpdatedAt)
        </dd>
    </dl>
    <hr/>

    <form method="post">
        <input type="hidden" asp-for="GameState!.Id" />
        <div class="actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
